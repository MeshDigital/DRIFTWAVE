<Window x:Class="SLSKDONET.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SLSKDONET.Views" 
    Title="Soulseek Downloader" 
    Height="800" 
    Width="1200"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">
    
    <Grid x:Name="MainGrid" Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area with Simple Navigation Menu -->
        <Grid x:Name="RootContent" Grid.Row="0" Background="#1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <Button Content="ðŸ” Search" Command="{Binding NavigateSearchCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="ðŸ“‹ Imported" Command="{Binding NavigateImportedCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="ðŸ“š Library" Command="{Binding NavigateLibraryCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="â¬‡ï¸ Downloads" Command="{Binding NavigateDownloadsCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="âš™ï¸ Settings" Command="{Binding NavigateSettingsCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                </StackPanel>
            </Border>
            
            <!-- Frame for page content -->
            <Frame x:Name="RootFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="Transparent"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16,10">
            <TextBlock Text="{Binding StatusText, FallbackValue='Disconnected'}" 
                       Foreground="#A0A0A0"
                       FontSize="12">
            </TextBlock>
        </Border>

        <!-- Login Overlay - ALWAYS visible on top when not connected -->
        <Grid x:Name="LoginOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="2"
              Panel.ZIndex="1000"
              Background="#DD000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoginOverlayVisible, FallbackValue=True}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Centered login card -->
            <Border x:Name="LoginCard" 
                    Background="#252526" 
                    CornerRadius="8" 
                    Padding="32"
                    Width="420"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Sign in to Soulseek" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,24" 
                               HorizontalAlignment="Center"/>

                    <Label Content="Username" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay}" 
                             Background="#2D2D2D"
                             Foreground="White"
                             BorderBrush="#404040"
                             Padding="12,8"
                             FontSize="14"
                             Margin="0,0,0,16"/>

                    <Label Content="Password" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <PasswordBox x:Name="OverlayPasswordBox" 
                                 Background="#2D2D2D"
                                 Foreground="White"
                                 BorderBrush="#404040"
                                 Padding="12,8"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                    <CheckBox Content="Remember Password" 
                              IsChecked="{Binding RememberPassword, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <Button x:Name="SignInButton"
                            Content="Sign In" 
                            Click="SignInButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="44"
                            FontSize="14"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
