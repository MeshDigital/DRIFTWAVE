<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SLSKDONET.ViewModels.Downloads"
             xmlns:controls="using:SLSKDONET.Views.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="120"
             x:Class="SLSKDONET.Views.Avalonia.Controls.DownloadGroupRow">
    
    <Border Background="{DynamicResource SurfaceLightColor}" 
            CornerRadius="8" 
            Margin="0,0,0,8" 
            Padding="0"
            BoxShadow="0 4 12 -4 #40000000">
        
        <Expander IsExpanded="{Binding IsExpanded}"
                  HorizontalAlignment="Stretch"
                  Padding="0">
            
            <Expander.Header>
                <Grid ColumnDefinitions="Auto, *, Auto" Height="60">
                    <!-- 1. Metadata -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <!-- Tiny Art -->
                        <Border Width="48" Height="48" CornerRadius="4" ClipToBounds="True">
                             <Panel>
                                 <!-- Fallback -->
                                 <Panel Background="{DynamicResource SystemChromeLowColor}" 
                                        IsVisible="{Binding ArtworkUrl, Converter={x:Static ObjectConverters.IsNull}}">
                                     <PathIcon Data="{DynamicResource disc_regular}" 
                                               Foreground="{DynamicResource TextSecondaryColor}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Width="24" Height="24"/>
                                 </Panel>
                                 
                                 <!-- Artwork -->
                                 <Image Source="{Binding ArtworkUrl}" 
                                        Stretch="UniformToFill"
                                        IsVisible="{Binding ArtworkUrl, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                             </Panel>
                        </Border>
                        
                        <StackPanel VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="{Binding Title}" 
                                       FontWeight="SemiBold" 
                                       FontSize="15"
                                       Foreground="{DynamicResource TextPrimaryColor}"/>
                            <TextBlock Text="{Binding Subtitle}" 
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryColor}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 2. Aggregate Stats -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0">
                         <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,4">
                             <TextBlock Text="{Binding StatusText}" 
                                        FontSize="12" 
                                        Foreground="{DynamicResource TextSecondaryColor}"/>
                             <TextBlock Grid.Column="1" 
                                        Text="{Binding TotalProgress, StringFormat='{}{0:0}%'}" 
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource TextPrimaryColor}"/>
                         </Grid>
                         <!-- Progress Bar -->
                         <ProgressBar Value="{Binding TotalProgress}" 
                                      Maximum="100" 
                                      Height="4" 
                                      CornerRadius="2"
                                      Foreground="{DynamicResource AccentGradient}"
                                      Background="{DynamicResource SystemChromeMediumColor}"/>
                    </StackPanel>

                    <!-- 3. Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="12,0,0,0">
                        <Button Classes="icon" Command="{Binding PauseCommand}" ToolTip.Tip="Pause Album">
                            <PathIcon Data="{DynamicResource pause_regular}" />
                        </Button>
                        <Button Classes="icon" Command="{Binding ResumeCommand}" ToolTip.Tip="Resume Album">
                             <PathIcon Data="{DynamicResource play_regular}" />
                        </Button>
                        <Button Classes="icon danger" Command="{Binding CancelCommand}" ToolTip.Tip="Cancel Album">
                             <PathIcon Data="{DynamicResource dismiss_regular}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Expander.Header>
            
            <!-- Items Repeater inside Expander -->
            <ItemsRepeater ItemsSource="{Binding Tracks}" Margin="0,0,0,0">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                       <controls:StandardTrackRow Margin="0,1,0,0"/>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="0"/>
                </ItemsRepeater.Layout>
            </ItemsRepeater>
            
        </Expander>
    </Border>
</UserControl>
