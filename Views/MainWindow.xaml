<Window x:Class="SLSKDONET.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SLSKDONET.Views"
    xmlns:converters="clr-namespace:SLSKDONET.Converters"
    Title="Soulseek Downloader" 
    Height="800" 
    Width="1200"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">

    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding RunDiagnosticsCommand}"/>
    </Window.InputBindings>
    
    <Grid x:Name="MainGrid" Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Global Progress Bar (Top of Window) -->
        <Border Grid.Row="0" Height="3" Background="#1E1E1E">
            <ProgressBar Value="{Binding DownloadProgressPercentage, Mode=OneWay, FallbackValue=0}" 
                         Maximum="100" 
                         Foreground="#4CAF50" 
                         Background="Transparent"
                         BorderThickness="0"
                         Height="3"/>
        </Border>

        <!-- Main Content Area with Simple Navigation Menu -->
        <Grid x:Name="RootContent" Grid.Row="1" Background="#1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,1,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Width" Value="200"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                                <Setter Property="Width" Value="60"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Hamburger Toggle -->
                    <Button Grid.Row="0" Command="{Binding ToggleSidebarCommand}" 
                            Background="Transparent" BorderThickness="0" Foreground="#AAA"
                            HorizontalAlignment="Left" Margin="10,15,0,0" Padding="8" Cursor="Hand">
                        <TextBlock Text="â‰¡" FontSize="20"/>
                    </Button>

                    <!-- Nav Buttons -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <Button Command="{Binding NavigateSearchCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Search">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Search" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateLibraryCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Library">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“š" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Library" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateDownloadsCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Downloads">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="â¬‡ï¸" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Downloads" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateSettingsCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Settings">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âš™ï¸" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Settings" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Frame for page content -->
            <Frame x:Name="RootFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="Transparent"/>
            
            <!-- Right Sidebar Placeholder (Music Player) -->
            <Border Grid.Column="2" Background="#222" BorderBrush="#333" BorderThickness="1,0,0,0" Width="280">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#2A2A2A" Padding="15" Margin="15,20,15,10" CornerRadius="8">
                        <StackPanel>
                             <TextBlock Text="ðŸŽµ No Track Playing" Foreground="#DDD" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                             <TextBlock Text="Music Player Coming Soon" Foreground="#777" FontSize="12" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Grid.Row="1" Text="Queue Empty" Foreground="#444" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontStyle="Italic"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar with Connection Indicator -->
        <Border Grid.Row="2" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Status Indicator (Left) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0"
                             Fill="{Binding IsConnected, Converter={StaticResource ConnectionStatusColorConverter}}"/>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectionStatusTextConverter}}" 
                               Foreground="#A0A0A0" FontSize="11" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    
                    <!-- Sign In button (only visible when disconnected) -->
                    <Button Content="ðŸ”‘ Sign In" 
                            Command="{Binding ShowLoginCommand}"
                            Background="#0E639C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1177BB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Disconnect button (only visible when connected) -->
                    <Button Content="ðŸ”Œ Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            Background="#C63133"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E63A3E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Status Message (Center) - temporary status like "Searching...", "Connecting..." -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusText, FallbackValue=''}" 
                           Foreground="#A0A0A0"
                           FontSize="12"
                           Margin="20,0,0,0"/>

                <!-- Download Progress (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TodoCount, StringFormat='ðŸ“¥ {0} in progress'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding SuccessfulCount, StringFormat='âœ“ {0} completed'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding FailedCount, StringFormat='âœ— {0} failed'}" 
                               Foreground="#A0A0A0" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Login Overlay - ALWAYS visible on top when not connected -->
        <Grid x:Name="LoginOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="2"
              Panel.ZIndex="1000"
              Background="#DD000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoginOverlayVisible, FallbackValue=True}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Centered login card -->
            <Border x:Name="LoginCard" 
                    Background="#252526" 
                    CornerRadius="8" 
                    Padding="32"
                    Width="420"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Sign in to Soulseek" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,24" 
                               HorizontalAlignment="Center"/>

                    <Label Content="Username" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay}" 
                             Background="#2D2D2D"
                             Foreground="White"
                             BorderBrush="#404040"
                             Padding="12,8"
                             FontSize="14"
                             Margin="0,0,0,16"/>

                    <Label Content="Password" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <PasswordBox x:Name="OverlayPasswordBox" 
                                 Background="#2D2D2D"
                                 Foreground="White"
                                 BorderBrush="#404040"
                                 Padding="12,8"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                    <CheckBox Content="Remember Password" 
                              IsChecked="{Binding RememberPassword, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,12"/>

                    <CheckBox Content="Auto-Connect on startup" 
                              IsChecked="{Binding AutoConnectEnabled, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,20"/>

                     <Button x:Name="SignInButton"
                            Content="Sign In" 
                            Click="SignInButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="44"
                            FontSize="14"
                            FontWeight="SemiBold"
                            IsDefault="True"/>
                    
                    <Button Content="Maybe Later" 
                            Command="{Binding DismissLoginCommand}"
                            Background="Transparent" 
                            Foreground="#A0A0A0" 
                            FontSize="12"
                            BorderThickness="0" 
                            Padding="0,12"
                            Margin="0,8,0,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#A0A0A0"
                                          HorizontalAlignment="Center"
                                          TextDecorations="Underline">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
